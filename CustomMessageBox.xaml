<Window x:Class="Weather.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" Height="200" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#1E1E2D" Foreground="White" BorderThickness="0"
        WindowStyle="None">
    <Grid Margin="10">
        <!-- Header -->
        <Border Background="#26263D" CornerRadius="5" Height="40" VerticalAlignment="Top">
            <TextBlock Text="Weather Alert" VerticalAlignment="Center" FontWeight="Bold"
                       FontSize="18" Margin="10,0" />
        </Border>

        <!-- Message Content -->
        <TextBlock x:Name="MessageContent" TextWrapping="Wrap" FontSize="20" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   TextAlignment="Center" Margin="10"/>

        <!-- Buttons -->
        <Button Content="OK" Width="80" Height="30" HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" Margin="0,0,10,10" Click="OkButton_Click"
                Background="#4CAF50" Foreground="White" BorderBrush="#388E3C"/>
    </Grid>
</Window>
